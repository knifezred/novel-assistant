{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/main/**/*.ts",
    "src/preload/*",
    "build/plugins/*",
    "src/main/service/models/data-model.ts",
    "src/main/database/entity"
  ],
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "electron-vite/node"
    ]
  }
}